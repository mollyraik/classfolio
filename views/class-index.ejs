<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
    <div class="loading-icon">Loading...</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    // hide the loading icon
    document.querySelector(".loading-icon").style.display = "none";
  });
</script>

    <%- include('./partials/nav') %>
    <div class="container">
        <h1 class="primary">Our Class</h1>
        <div class="row g-3">
            <% students.forEach((student) => { %>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card text-center">
                        <a href="/student/<%= student._id %>">
                            <div class="row">
                                <div class="col-xs-12" style="padding-bottom: 100%;">
                                    <img src="<%= student.photo %>" alt=" <%= `${student.firstName} ${student.lastName}` %> " class="img-fluid w-100 shadow-1-strong rounded mb-4" style="position: absolute; top: 0; left: 0; object-fit: cover; width: 100%; height: 100%;" class="d-sm-none d-md-block">
                                </div>
                                <h5 class="card-title card-body col-xs-12" style="z-index: 1; color: white; text-decoration: none;"> <%= `${student.firstName} ${student.lastName}` %> </h5>
                            </div>
                        </a> 
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/bootstrapjs.ejs') %>
</body>
</html>