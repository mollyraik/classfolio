<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
    <div class="container">
        <nav>
            <a href="/class">Back to the Class Index</a>
            <a href="/projects/new?studentId=<%= student._id %>">Add a New Project</a>
        </nav>
        <div class="row">
            <h1 class="col-xs-12 col-md-4"><%= title %></h1>
            <img src="<%= student.photo %>" alt="<%= title %>" class="col-xs-12 col-md-8 col-lg-4">
        </div>
        <button class="btn-default">
            <a href="/student/<%= student._id %>/edit" class="btn">Edit <%= title %></a>
        </button>
        <form action="/student/<%= student._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn-danger">
        </form>
        <div class="row">
            <% projects.forEach((project) => {%>
                <a href="/projects/<%= project._id %>" class="col-xs-12 col-sm-6 col-lg-3">
                    <p><%= project.name %></p>
                    <img src="<%= project.photo %>" alt="<%= project.name %>">
                </a>
            <% }) %> 
        </div>

    </div>
</body>
</html>